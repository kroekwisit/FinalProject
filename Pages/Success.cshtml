@page
@model SuccessModel
@{
    ViewData["Title"] = "Email Sent";
}

<style>
    /* Your CSS styles */
    .success-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 80vh; /* Adjust the height as needed */
    }

    .success-message {
        font-size: 24px;
        margin-bottom: 20px;
    }

    .btn-home {
        padding: 8px 30px;
        border: none;
        border-radius: 4px;
        background-color: #007bff;
        color: white;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

        .btn-home:hover {
            background-color: #0056b3;
        }
</style>

<div class="success-container">
    <h1 class="success-message">Email Sent</h1>
    <a href="/Index" class="btn-home">Home</a>
</div>
